[MAIN]
# Fail if score is below this threshold
fail-under=9.9

[MESSAGES CONTROL]
# Disable common warnings that are acceptable in this project
disable=
    duplicate-code,
    # Test files commonly access protected members for testing
    protected-access,
    # Test files often have fixtures that redefine outer scope names
    redefined-outer-name,
    # Test helper classes often have few public methods
    too-few-public-methods,
    # Test files may import but use fixtures indirectly
    unused-import,
    # Test files may have unused arguments from fixtures
    unused-argument,
    # Trailing newlines are a minor style issue
    trailing-newlines,
    # Import order is managed differently in test files with sys.path manipulation
    wrong-import-position,
    # Test files may have unused variables for assertions
    unused-variable,
    # Using open without encoding is acceptable for JSON files
    unspecified-encoding,
    # Test files may have missing docstrings for inner classes
    missing-class-docstring,
    # Broad exception catching is sometimes needed in tests
    broad-exception-caught,
    # Ignore line length limits
    line-too-long,
    # Allow complex functions with many statements
    too-many-statements,
    # Allow functions with many arguments
    too-many-arguments,
    # Ignore trailing whitespace
    trailing-whitespace,
    # Ignore unnecessary pass statements
    unnecessary-pass,
    # Ignore missing module docstrings
    missing-module-docstring,
    # Ignore missing final newline
    missing-final-newline,
    # Allow functions with many positional arguments
    too-many-positional-arguments

[DESIGN]
# Allow more local variables and arguments for complex functions
max-locals=20
max-args=8
max-positional-arguments=8

